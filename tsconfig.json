{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2023",
    "types": ["node"],
    // "lib": [
    //   "esnext"
    // ],
    // "sourceMap": true,
    // "declaration": true,
    // "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,

    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "generated",
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "generated"
  ]
}