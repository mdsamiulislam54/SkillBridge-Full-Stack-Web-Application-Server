model TutorSlot {
  id           String   @id @default(uuid())
  tutorId      String
  startTime    String
  endTime      String
  duration     String
  teachingMode String
  maxStudent   Int
  hourlyRate   Int
  category     String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  tutorProfile TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  bookings     Booking[]

  @@map("tutorSlots")
}
